<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PokemonBetting.Client"
             x:Class="PokemonBetting.Client.AccountForm">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="Create new user:" />
      <Entry x:Name="userNameText" Placeholder="your username" />
      <Entry x:Name="eMailText" Placeholder="your email" >
        <Entry.Behaviors>
          <local:EmailValidatorBehaviour x:Name="emailValidator"/>
        </Entry.Behaviors>
      </Entry>
      <Entry x:Name="passwordText" IsPassword="true" Placeholder="your password" />
      <Entry x:Name="passwordCheckText" IsPassword="true" Placeholder="confirm password" />
      <Button x:Name="sendButton" Text="Send" Clicked="OnSend" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>