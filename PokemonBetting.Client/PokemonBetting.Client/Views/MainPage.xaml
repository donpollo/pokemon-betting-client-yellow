<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PokemonBetting.Client.Views.MainPage">
  <StackLayout VerticalOptions="Start"
                 Orientation="Vertical">
    <Button Text="User Display Page"
                  Command="{Binding UserDisplayPageCommand}"/>
    <Button Text="Show next live battle"
                  Command="{Binding NextLiveBattlePageCommand}"/>
    <Button Text="Battles page"
            Command="{Binding BattlesPageCommand}"/>
  </StackLayout>
</ContentPage>